.wheel RadioSegment {
  width: 9%;
  height: 22.5%;
}

RadioSegment Icon {
  top: 50%;
  left: 50%;
  alignment-x: center;
  alignment-y: center;
  width: 120%;
  height: 120%;
}

RadioSegment .radio-segment-icon {
  width: 100%;
  height: width;
  alignment-x: center;
  alignment-y: center;
}

RadioSegment .radio-segment-name {
  left: 50%;
  top: 90%;
  width: 500%;
  alignment-x: center;
  alignment-y: center;
  font-size: 0.7;
  text-color: white;
}

.coming-soon {
  opacity: 0.7;
}

Component {
  text-shadow: 1 1 2 rgba(0, 0, 0, 0.8);
}

  .wheel-subtitle {
    top: 96%;
    left: 50%;
    width: 300;
    height: fit-content;
    alignment-x: center;
    render-out-of-bounds: true;
    space-between-entries: 0;

    Component {
      width: fit-content;
      alignment-x: center;
    }

    .wheel-page-bar {
      width: fit-content;
      height: 12;

      Component {
        font-size: 0.8;
        alignment-y: center;
        alignment-x: center;
      }

      .mouse-icon {
        height: 100%;
        width: fit-content;
        clickable: false;
      }

      .arrow-icon {
        height: 60%;
        padding-right: 2;
        padding-left: 2;
        width: fit-content;
        clickable: false;
      }
    }

  }

.wheel-title {
  top: -7;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 6;
  padding: 5 5 5 5;
  border-thickness: 2;
  border-color: rgba(255, 255, 255, 0.1);
}

.subtitle-info {
  margin-top: 5;
  width: fit-content;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 6;
  padding: 5 5 25 5;
  border-thickness: 2;
  border-color: rgba(255, 255, 255, 0.1);

  .subtitle-info-controls {
    width: 150;
    alignment-x: center;
  }

}